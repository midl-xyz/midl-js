{
	"name": "@midl-xyz/satoshi-kit",
	"version": "0.0.0",
	"scripts": {
		"build": "pnpm run clean && tspc --project tsconfig.esm.json && tspc --project tsconfig.cjs.json",
		"dev": "concurrently \"tspc --watch --preserveWatchOutput --project tsconfig.esm.json\" \"tspc --watch --preserveWatchOutput --project tsconfig.cjs.json\"",
		"clean": "rm -rf dist",
		"test": "vitest",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js"
		},
		"./*": {
			"types": "./dist/types/*.d.ts",
			"import": "./dist/esm/*.js",
			"require": "./dist/cjs/*.js"
		}
	},
	"files": ["dist"],
	"devDependencies": {
		"@chromatic-com/storybook": "^3.2.5",
		"@midl-xyz/midl-js-config": "workspace:^",
		"@storybook/addon-essentials": "^8.6.0",
		"@storybook/addon-interactions": "^8.6.0",
		"@storybook/addon-onboarding": "^8.6.0",
		"@storybook/blocks": "^8.6.0",
		"@storybook/react": "^8.6.0",
		"@storybook/react-vite": "^8.6.0",
		"@storybook/test": "^8.6.0",
		"@types/react": "^18.3.11",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"storybook": "^8.6.0"
	},
	"dependencies": {
		"@midl-xyz/midl-js-core": "workspace:^"
	},
	"peerDependencies": {
		"@types/react": "^18.3.11",
		"react": "^18.3.1",
		"react-dom": "^18.3.1"
	}
}
