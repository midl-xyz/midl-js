{
	"name": "@midl-xyz/satoshi-kit",
	"version": "2.0.0-next.43",
	"type": "module",
	"scripts": {
		"build": "pnpm run build:lib && pnpm run build:styles",
		"dev": "concurrently \"pnpm run dev:lib\" \"pnpm run dev:styles\" \"pnpm run dev:vite\"",
		"build:lib": "pnpm run clean && tspc --project tsconfig.esm.json",
		"dev:lib": "tspc --watch --preserveWatchOutput --project tsconfig.esm.json",
		"clean": "rm -rf dist",
		"test": "vitest",
		"prepare": "panda codegen",
		"build:styles": "panda cssgen --outfile dist/styles.css --polyfill",
		"dev:styles": "chokidar \"src/**/*.{ts,tsx}\" -c \"pnpm run build:styles\"",
		"dev:vite": "vite ./app -c vite.config.ts"
	},
	"main": "./dist/esm/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/types/index.d.ts",
			"import": "./dist/esm/index.js"
		},
		"./*": {
			"types": "./dist/types/*.d.ts",
			"import": "./dist/esm/*.js"
		},
		"./styles.css": "./dist/styles.css",
		"./styled-system/*": "./styled-system/*"
	},
	"files": ["dist", "styled-system"],
	"devDependencies": {
		"@midl-xyz/midl-js-config": "workspace:^",
		"@midl-xyz/midl-js-connectors": "workspace:^",
		"@midl-xyz/midl-js-core": "workspace:^",
		"@midl-xyz/midl-js-node": "workspace:^",
		"@midl-xyz/midl-js-react": "workspace:^",
		"@pandacss/dev": "^0.53.1",
		"@park-ui/panda-preset": "^0.43.1",
		"@tanstack/react-query": "^5.69.0",
		"@types/react": "^18.3.11",
		"@vitejs/plugin-react": "^4.6.0",
		"chokidar-cli": "^3.0.0",
		"postcss": "8.4.3",
		"postcss-cli": "^11.0.1",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"vite": "^5.4.10"
	},
	"peerDependencies": {
		"@midl-xyz/midl-js-connectors": "workspace:^",
		"@midl-xyz/midl-js-core": "workspace:^",
		"@midl-xyz/midl-js-react": "workspace:^",
		"@tanstack/react-query": "^5",
		"@types/react": "*",
		"react": "*",
		"react-dom": "*"
	},
	"dependencies": {
		"@ark-ui/react": "^5.0.1",
		"boring-avatars": "^2.0.0",
		"lucide-react": "^0.453.0"
	}
}
