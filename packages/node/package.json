{
	"name": "@midl/node",
	"version": "3.0.3",
	"license": "MIT",
	"scripts": {
		"build": "tsdown --format cjs,esm -d dist",
		"test": "vitest"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"files": [
		"dist"
	],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./*": {
			"import": {
				"types": "./dist/*.d.mts",
				"default": "./dist/*.mjs"
			},
			"require": {
				"types": "./dist/*.d.cts",
				"default": "./dist/*.cjs"
			}
		}
	},
	"devDependencies": {
		"@midl/core": "workspace:^",
		"@types/node": "^22.8.7",
		"@midl/bip322-js": "^3.0.1"
	},
	"dependencies": {
		"@bitcoinerlab/secp256k1": "^1.2.0",
		"@noble/hashes": "^2.0.1",
		"bip32": "5.0.0-rc.0",
		"bip39": "^3.1.0",
		"bitcoinjs-lib": "7.0.1",
		"bitcoinjs-message": "^2.2.0",
		"ecpair": "^3.0.0",
		"varuint-bitcoin": "1.1.2"
	},
	"peerDependencies": {
		"@midl/core": "workspace:^"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/node",
		"type": "git"
	}
}
