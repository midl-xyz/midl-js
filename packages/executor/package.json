{
  "name": "@midl-xyz/midl-js-executor",
  "version": "0.0.57",
  "scripts": {
    "build": "pnpm run clean && tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "dev": "concurrently \"tsc --watch --preserveWatchOutput --project tsconfig.build.json\" \"tsc-alias -w -p tsconfig.build.json\"",
    "clean": "rm -rf dist",
    "test": "vitest",
    "generate": "wagmi generate"
  },
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src/**/*.d.ts"
  ],
  "devDependencies": {
    "@midl-xyz/midl-js-config": "workspace:^",
    "@midl-xyz/midl-js-react": "workspace:^",
    "@tanstack/react-query": "^5.59.9",
    "@types/node": "^22.8.7",
    "@types/react": "^18",
    "@wagmi/cli": "^2.1.15",
    "@wagmi/connectors": "^5.1.11",
    "bitcoinjs-lib": "7.0.0-rc.0",
    "react": "^18.3.1",
    "viem": "npm:@midl-xyz/midl-viem@2.21.36",
    "wagmi": "^2.*"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.1.1",
    "@midl-xyz/contracts": "^0.0.2",
    "@midl-xyz/midl-js-core": "workspace:^",
    "zustand": "^5.0.1"
  },
  "peerDependencies": {
    "@midl-xyz/midl-js-react": "workspace:^",
    "@tanstack/react-query": "^5.59.9",
    "@types/react": "^18",
    "bitcoinjs-lib": "7.0.0-rc.0",
    "react": "^18.*",
    "viem": "npm:@midl-xyz/midl-viem@2.*",
    "wagmi": "^2.*"
  }
}