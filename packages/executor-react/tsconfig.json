{
	"extends": "@midl/midl-js-config/tsconfig.base.json",
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"compilerOptions": {
		"baseUrl": ".",
		"jsx": "react-jsx",
		"sourceMap": true,
		"inlineSources": true,
		"paths": {
			"~/*": ["./src/*"]
		},
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	}
}
