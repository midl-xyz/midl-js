{
	"include": ["./src/**/*.ts", "./src/**/*.tsx", "./src/**/*.d.ts"],
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"sourceMap": true,
		"inlineSources": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react-jsx",
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
