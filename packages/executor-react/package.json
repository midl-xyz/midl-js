{
	"name": "@midl/executor-react",
	"version": "3.0.0-next.23",
	"license": "MIT",
	"scripts": {
		"build": "pnpm run clean && tspc --project tsconfig.esm.json && tspc --project tsconfig.cjs.json",
		"dev": "concurrently \"tspc --watch --preserveWatchOutput --project tsconfig.esm.json\" \"tspc --watch --preserveWatchOutput --project tsconfig.cjs.json\"",
		"clean": "rm -rf dist",
		"test": "vitest"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./*": {
			"import": "./dist/esm/*.js",
			"require": "./dist/cjs/*.js",
			"types": "./dist/types/*.d.ts"
		}
	},
	"files": ["dist"],
	"devDependencies": {
		"@midl/midl-js-config": "workspace:^",
		"@midl/node": "workspace:^",
		"@midl/react": "workspace:^",
		"@tanstack/react-query": "^5.59.9",
		"@types/node": "^22.8.7",
		"@types/react": "^18",
		"bitcoinjs-lib": "7.0.0-rc.0",
		"happy-dom": "^15.11.7",
		"react": "^18.3.1",
		"viem": "npm:@midl/viem",
		"wagmi": "^2.*",
		"zustand": "^5.0.1"
	},
	"dependencies": {
		"@midl/core": "workspace:^",
		"@midl/executor": "workspace:^"
	},
	"peerDependencies": {
		"@midl/react": "workspace:^",
		"@midl/viem": "*",
		"@tanstack/react-query": "^5.59.9",
		"@types/react": "^18",
		"bitcoinjs-lib": "7.0.0-rc.0",
		"react": "^18.*",
		"wagmi": "^2.*",
		"zustand": "^5.0.1"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/executor-react",
		"type": "git"
	}
}
