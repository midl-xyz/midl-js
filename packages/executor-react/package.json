{
	"name": "@midl/executor-react",
	"version": "3.0.3",
	"license": "MIT",
	"scripts": {
		"build": "tsdown --format cjs,esm -d dist",
		"test": "vitest"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./*": {
			"import": {
				"types": "./dist/*.d.mts",
				"default": "./dist/*.mjs"
			},
			"require": {
				"types": "./dist/*.d.cts",
				"default": "./dist/*.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@midl/node": "workspace:^",
		"@midl/react": "workspace:^",
		"@tanstack/react-query": "5.69.0",
		"@types/node": "^22.8.7",
		"@types/react": "^19",
		"bitcoinjs-lib": "7.0.1",
		"happy-dom": "^15.11.7",
		"react": "^19.2.4",
		"viem": "npm:@midl/viem",
		"wagmi": "^3.4.1",
		"zustand": "^5.0.1"
	},
	"dependencies": {
		"@midl/core": "workspace:^",
		"@midl/executor": "workspace:^"
	},
	"peerDependencies": {
		"@midl/react": "workspace:^",
		"@midl/viem": "*",
		"@tanstack/react-query": ">=5 <6",
		"bitcoinjs-lib": ">=7 <8",
		"react": ">=18 <20",
		"react-dom": ">=18 <20",
		"wagmi": ">=2 <=4",
		"zustand": ">=5",
		"viem": "*"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/executor-react",
		"type": "git"
	}
}
