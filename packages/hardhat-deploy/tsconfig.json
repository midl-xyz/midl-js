{
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"target": "esnext",
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"resolveJsonModule": true,
		"strict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"skipLibCheck": true,
		"baseUrl": ".",
		"sourceMap": true,
		"inlineSources": true,
		"allowSyntheticDefaultImports": true,
		"paths": {
			"~/*": ["./src/*"]
		}
	}
}
