{
	"name": "@midl/hardhat-deploy",
	"version": "3.0.2-next.3",
	"license": "MIT",
	"scripts": {
		"build": "tsdown --format cjs,esm -d dist",
		"test": "vitest"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"files": ["dist"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./*": {
			"import": {
				"types": "./dist/*.d.mts",
				"default": "./dist/*.mjs"
			},
			"require": {
				"types": "./dist/*.d.cts",
				"default": "./dist/*.cjs"
			}
		}
	},
	"devDependencies": {
		"hardhat": "^2.22.17",
		"hardhat-deploy": "^1.0.3"
	},
	"peerDependencies": {
		"hardhat": ">=2 <3",
		"@midl/logger": "workspace:*",
		"@midl/core": "workspace:^",
		"@midl/executor": "workspace:^",
		"@midl/node": "workspace:^",
		"viem": "*",
		"@midl/viem": "*"
	},
	"dependencies": {
		"@nomicfoundation/hardhat-viem": "^2.0.6",
		"zustand": "^5.0.1"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/hardhat-deploy",
		"type": "git"
	}
}
