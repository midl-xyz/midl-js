{
	"name": "@midl/hardhat-deploy",
	"version": "3.0.0-next.14",
	"license": "MIT",
	"scripts": {
		"build": "pnpm run clean && tspc --project tsconfig.esm.json && tspc --project tsconfig.cjs.json",
		"dev": "concurrently \"tspc --watch --preserveWatchOutput --project tsconfig.esm.json\" \"tspc --watch --preserveWatchOutput --project tsconfig.cjs.json\"",
		"clean": "rm -rf dist",
		"test": "vitest",
		"test:compile": "./tests/fixtures/hardhat-project/compile.sh"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"files": ["dist"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./*": {
			"import": "./dist/esm/*.js",
			"require": "./dist/cjs/*.js",
			"types": "./dist/types/*.d.ts"
		}
	},
	"devDependencies": {
		"@midl/midl-js-config": "workspace:^",
		"hardhat": "^2.22.17",
		"hardhat-deploy": "^1.0.3"
	},
	"peerDependencies": {
		"hardhat": "^2.22.17"
	},
	"dependencies": {
		"@midl/logger": "workspace:*",
		"@midl/core": "workspace:^",
		"@midl/executor": "workspace:^",
		"@midl/node": "workspace:^",
		"@nomicfoundation/hardhat-viem": "^2.0.6",
		"viem": "npm:@midl/viem",
		"zustand": "^5.0.1"
	}
}
