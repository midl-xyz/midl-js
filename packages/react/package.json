{
	"name": "@midl/react",
	"version": "3.0.0",
	"license": "MIT",
	"scripts": {
		"build": "pnpm run clean && tspc --project tsconfig.esm.json && tspc --project tsconfig.cjs.json",
		"dev": "concurrently \"tspc --watch --preserveWatchOutput --project tsconfig.esm.json\" \"tspc --watch --preserveWatchOutput --project tsconfig.cjs.json\"",
		"clean": "rm -rf dist",
		"test": "vitest"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./*": {
			"import": "./dist/esm/*.js",
			"require": "./dist/cjs/*.js",
			"types": "./dist/types/*.d.ts"
		}
	},
	"files": ["dist"],
	"devDependencies": {
		"@bitcoinerlab/secp256k1": "^1.2.0",
		"@midl/midl-js-config": "workspace:^",
		"@midl/node": "workspace:^",
		"@tanstack/react-query": "*",
		"@types/react": "^19",
		"bitcoinjs-lib": "7.0.1",
		"ecpair": "^2.1.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4"
	},
	"dependencies": {
		"@midl/core": "workspace:^",
		"zustand": "^5.0.1"
	},
	"peerDependencies": {
		"@tanstack/react-query": "*",
		"react": ">=18 <20",
		"react-dom": ">=18 <20"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/react",
		"type": "git"
	}
}
