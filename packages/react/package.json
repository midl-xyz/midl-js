{
	"name": "@midl/react",
	"version": "3.0.5",
	"license": "MIT",
	"scripts": {
		"build": "tsdown --format cjs,esm -d dist",
		"test": "vitest"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./*": {
			"import": {
				"types": "./dist/*.d.mts",
				"default": "./dist/*.mjs"
			},
			"require": {
				"types": "./dist/*.d.cts",
				"default": "./dist/*.cjs"
			}
		}
	},
	"files": [
		"dist"
	],
	"devDependencies": {
		"@bitcoinerlab/secp256k1": "^1.2.0",
		"@midl/node": "workspace:^",
		"@tanstack/react-query": "*",
		"@types/react": "^19",
		"bitcoinjs-lib": "7.0.1",
		"ecpair": "^3.0.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4"
	},
	"dependencies": {
		"@midl/core": "workspace:^",
		"zustand": "^5.0.1"
	},
	"peerDependencies": {
		"@tanstack/react-query": "*",
		"react": ">=18 <20",
		"react-dom": ">=18 <20"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/react",
		"type": "git"
	}
}
