{
	"extends": "./tsconfig.json",
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": [
		"./src/**/*.test.ts",
		"./src/**/*.test.tsx",
		"./src/**/__tests__"
	],
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"sourceMap": true,
		"declaration": true,
		"declarationDir": "./dist/types",
		"outDir": "./dist/esm"
	}
}
