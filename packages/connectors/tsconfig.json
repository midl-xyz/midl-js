{
	"extends": "@midl/midl-js-config/tsconfig.base.json",
	"include": ["./src/**/*.ts"],
	"compilerOptions": {
		"moduleResolution": "Bundler",
		"sourceMap": true,
		"inlineSources": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./src/*"]
		},
		"plugins": [
			{ "transform": "typescript-transform-paths" },
			{ "transform": "typescript-transform-paths", "afterDeclarations": true }
		]
	}
}
