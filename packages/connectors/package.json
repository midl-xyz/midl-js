{
	"name": "@midl/connectors",
	"version": "3.0.0",
	"license": "MIT",
	"scripts": {
		"build": "pnpm run clean && tspc --project tsconfig.esm.json && tspc --project tsconfig.cjs.json",
		"dev": "concurrently \"tspc --watch --preserveWatchOutput --project tsconfig.esm.json\" \"tspc --watch --preserveWatchOutput --project tsconfig.cjs.json\"",
		"clean": "rm -rf dist",
		"test": "vitest"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"files": ["dist"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./*": {
			"import": "./dist/esm/*.js",
			"require": "./dist/cjs/*.js",
			"types": "./dist/types/*.d.ts"
		}
	},
	"devDependencies": {
		"@leather.io/rpc": "2.1.12",
		"@midl/core": "workspace:^",
		"@midl/midl-js-config": "workspace:^",
		"@types/node": "^22.8.7"
	},
	"dependencies": {
		"@noble/hashes": "^2.0.1",
		"@scure/base": "^2.0.0",
		"bitcoinjs-lib": "7.0.1",
		"sats-connect": "^4.2.1"
	},
	"peerDependencies": {
		"@midl/core": "workspace:^"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/connectors",
		"type": "git"
	}
}
