{
	"name": "@midl/connectors",
	"version": "3.0.1",
	"license": "MIT",
	"scripts": {
		"build": "tsdown --format cjs,esm -d dist",
		"test": "vitest"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"files": ["dist"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./*": {
			"import": {
				"types": "./dist/*.d.mts",
				"default": "./dist/*.mjs"
			},
			"require": {
				"types": "./dist/*.d.cts",
				"default": "./dist/*.cjs"
			}
		}
	},
	"devDependencies": {
		"@leather.io/rpc": "2.1.12",
		"@midl/core": "workspace:^",
		"@types/node": "^22.8.7"
	},
	"dependencies": {
		"@noble/hashes": "^2.0.1",
		"@scure/base": "^2.0.0",
		"bitcoinjs-lib": "7.0.1",
		"sats-connect": "^4.2.1"
	},
	"peerDependencies": {
		"@midl/core": "workspace:^"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/connectors",
		"type": "git"
	}
}
