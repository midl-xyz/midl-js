{
	"extends": "./tsconfig.json",
	"include": ["./src/**/*.ts", "./src/**/*.tsx"],
	"exclude": [
		"./src/**/*.test.ts",
		"./src/**/*.test.tsx",
		"./src/**/__tests__"
	],
	"compilerOptions": {
		"sourceMap": true,
		"inlineSources": true,
		"declaration": true,
		"declarationDir": "./dist",
		"outDir": "./dist"
	}
}
