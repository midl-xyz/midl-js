{
	"name": "@midl/core",
	"version": "3.0.0-next.24",
	"license": "MIT",
	"scripts": {
		"build": "pnpm run clean && tspc --project tsconfig.esm.json && tspc --project tsconfig.cjs.json",
		"dev": "concurrently \"tspc --watch --preserveWatchOutput --project tsconfig.esm.json\" \"tspc --watch --preserveWatchOutput --project tsconfig.cjs.json\"",
		"clean": "rm -rf dist",
		"test": "vitest"
	},
	"main": "./dist/cjs/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/types/index.d.ts",
	"files": ["dist"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": "./dist/esm/index.js",
			"require": "./dist/cjs/index.js",
			"types": "./dist/types/index.d.ts"
		},
		"./*": {
			"import": "./dist/esm/*.js",
			"require": "./dist/cjs/*.js",
			"types": "./dist/types/*.d.ts"
		}
	},
	"devDependencies": {
		"@leather.io/rpc": "2.1.12",
		"@midl/midl-js-config": "workspace:^",
		"@types/node": "^22.8.7",
		"msw": "^2.5.2"
	},
	"dependencies": {
		"@bitcoinerlab/secp256k1": "^1.2.0",
		"@midl/logger": "workspace:*",
		"bitcoinjs-lib": "7.0.0-rc.0",
		"bitcoinselect": "^1.0.0",
		"deepmerge": "^4.3.1",
		"ecpair": "^2.1.0",
		"openapi-fetch": "^0.14.0",
		"runelib": "^1.0.7",
		"viem": "^2.18.6",
		"zustand": "^5.0.1"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/core",
		"type": "git"
	}
}
