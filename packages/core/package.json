{
	"name": "@midl/core",
	"version": "3.0.1",
	"license": "MIT",
	"scripts": {
		"build": "tsdown --format cjs,esm -d dist",
		"test": "vitest"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.cts",
	"files": ["dist"],
	"exports": {
		"./package.json": "./package.json",
		".": {
			"import": {
				"types": "./dist/index.d.mts",
				"default": "./dist/index.mjs"
			},
			"require": {
				"types": "./dist/index.d.cts",
				"default": "./dist/index.cjs"
			}
		},
		"./*": {
			"import": {
				"types": "./dist/*.d.mts",
				"default": "./dist/*.mjs"
			},
			"require": {
				"types": "./dist/*.d.cts",
				"default": "./dist/*.cjs"
			}
		}
	},
	"devDependencies": {
		"@leather.io/rpc": "2.1.12",
		"@types/node": "^22.8.7",
		"msw": "^2.5.2",
		"viem": "npm:@midl/viem@2.45.0"
	},
	"dependencies": {
		"@bitcoinerlab/secp256k1": "^1.2.0",
		"@midl/logger": "workspace:*",
		"@midl/runelib": "1.0.9",
		"@noble/hashes": "^2.0.1",
		"bitcoinjs-lib": "7.0.1",
		"bitcoinselect": "^1.0.0",
		"deepmerge": "^4.3.1",
		"ecpair": "^3.0.0",
		"isows": "^1.0.7",
		"openapi-fetch": "^0.14.0",
		"zustand": "^5.0.1"
	},
	"repository": {
		"url": "git+https://github.com/midl-xyz/midl-js.git",
		"directory": "packages/core",
		"type": "git"
	}
}
