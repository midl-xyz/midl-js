{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "dev": {
            "dependsOn": [
                "^build"
            ],
            "persistent": true
        },
        "build": {
            "outputs": [
                "dist"
            ]
        },
        "test": {
            "dependsOn": [
                "^build"
            ]
        }
    }
}